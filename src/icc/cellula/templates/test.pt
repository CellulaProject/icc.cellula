<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="test.macros['page']">
  <tal:block metal:fill-slot="content">
    My awesome content changed.
    <div id="main_content">
    </div>
    <div id="out"></div>
    <button id="next" onclick="pengine.next()">Next</button>
    <div id="oa-out"></div>
  </tal:block>
  <tal:block metal:fill-slot="app-templates">
    <script type="text/x-dust-template" id="oa-row">
      <h1>{hello}</h1>
      <pre>
        {.subject}
        {#rdf}
          <li>{.}</li>
        {/rdf}
          <h2>Other</h2>
        {#rdf}
          <li>{.}</li>
        {/rdf}
      </pre>
        <h2>Third</h2>
      <h3>
        {#rdf oa:hasTarget}{.}{/rdf}
      </h3>
    </script>
  </tal:block>

  <tal:block metal:fill-slot="script-src">
    <script type="text/javascript">
      var pengine_setup={
        server:'http://127.0.0.1:3020/pengine',
        limit:100,
      };
       jQuery(document).ready(function(){
           async_renderer({
               __proto__:pengine_setup,
               template:"#oa-row",
               query:"icc:triple(Subject,rdf:type,oa:'Annotation',document)",
               // format:{'Subject':'subject'},
               // format:'Subject',
               struct:'Subject',
               then:function(html) {
                 $("#oa-out").html(html);
               }
           });
       });
      </script>
  </tal:block>
</html>
