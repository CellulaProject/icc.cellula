<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="test.macros['page']">
  <tal:block metal:fill-slot="content">
    My awesome content changed.
    <div id="main_content">
    </div>
    <div id="out"></div>
    <button id="next" onclick="pengine.next()">Next</button>
    <div id="oa-out"></div>
  </tal:block>
  <tal:block metal:fill-slot="app-templates">
    <script type="text/x-dust-template" id="oa-row">
      {#rel 'oa:hasTarget'}
      <tr>
        <td>{rel 'nie:contentCreated'}</td>
        <td>
          <a
             tal:attributes="href
             string:${request.route_url('get_doc')}?doc_id={{rel 'nie:identifier'}}"
             >{rel 'nie:fileName'}</a>
        </td> <!-- FIXE Try to deduce rdfs:label -->
      </tr>
      {/rel}
    </script>
    <script type="text/x-dust-template" id="atest">
        <h1>{hello} 1223</h1>
        <p>{bar}</p>
    </script>
  </tal:block>

  <tal:block metal:fill-slot="script-src">
      <script type="text/javascript">
       jQuery(document).ready(function(){
           async_renderer({
               //             template:"#oa-row",
               template:"#atest",
               target:"#oa-out",
               query:"icc:triple(Subject,rdf:type,oa:'Annotation',document)",
               subject:'Subject',
               server:'http://127.0.0.1:3020/pengine',
               limit:100
           });
       });
      </script>
  </tal:block>
</html>
