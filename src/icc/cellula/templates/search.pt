<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="main.macros['page']">
  <tal:block metal:fill-slot="content">
    <div tal:replace="structure view.body"></div>
    <span tal:define="src view.answer">
      <div tal:condition="src['total_found']>0">
        <pre tal:content="src"/>
        <table width="100%" cellspacing="" cellpadding="" border="">
          <tr tal:repeat="r view.matches">
            <td tal:content="m[0]">Date</td>
            <td tal:content="m[1]">Title</td>
            <td>
              <a href="#"
                 tal:attributes="href
                                 string:${request.route_url('archive')}/${m[2]}"
                 tal:content="m[3]">
              </a>
            <td>
          </tr>
        </table>
      </div>
      <div tal:condition="not: src['total_found']">
        The query produced no results.
      </div>
    </span>
  </tal:block>
</html>
