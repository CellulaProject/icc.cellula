[app:main]
use = egg:icc.cellula

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.debug_templates = true
# pyramid.default_locale_name = en
pyramid.default_locale_name = ru

pyramid.includes = pyramid_debugtoolbar pyramid_mailer pyramid_chameleon cornice
debugtoolbar.hosts = 192.168.0.0/16 2001:470:dfda::/48 2001:470:18fb::/48 127.0.0.1/8 ::1/128

mail.host = smtp.gmail.com
mail.port = 587
mail.ssl  = True
mail.username = celulla-admin@irnok.net
mail.password = CLL-32767
mail.default_sender = celulla-admin@irnok.net


[content_storage]
# Lookout! configurator sets 'file' as "<string>", i.e. with "'s!!!!
file="HOME/tmp/cellula-data/content.kch"
name=content	# Not used

[extractor]
#Do not use "'s here in string values, please!
tmp_path=HOME/tmp/cellula-data/tmp

[tracker]
tmp_path=HOME/tmp/cellula-data/tmp
exec_path=/usr/lib/tracker

[recoll]
tmp_path=HOME/tmp/cellula-data/tmp
mimeconf=/usr/share/recoll/examples/mimeconf
filter_dir=/usr/share/recoll/filters

[indexer]
data_dir=HOME/tmp/cellula-data/indexes
pid_file=index.pid
conf_file=index.conf
batch_amount=200

[rdf_storages]
all=persistent, temporal

[rdf_storage_persistent]
data_dir=HOME/tmp/cellula-data/rdf
data_file=world.kch
driver=KyotoCabinet

[rdf_storage_temporal]
driver=default

[graphs]
#Graphs are created and registered as utilities
#in the folloving very order
#all=ns, meta, org, document, tmp, fiber, persistent, temporal, world
all=document

[graph_ns]
#special graph, storing namespaces.
storage=temporal
load_from=icc.cellula:data/ontologies/namespaces.n3

[graph_meta]
# Contains all mata definitions in RDFS
storage=temporal

[graph_world]
contains=persistent, temporal
storage=temporal

[graph_org]
storage=persistent

[graph_document]
storage=persistent

[graph_tmp]
storage=temporal

[graph_fiber]
storage=persistent

[graph_persistent]
contains=org, document, fiber
storage=persistent

[graph_temporal]
contains=meta, tmp
storage=temporal

[sphinx]
mode=rt

[indexfeeder]
port=8080
host=[::1]
api=/api-fields

[workers]
threads=4
processes=0

[pengines]
URL=http://127.0.0.1:3020

[server:main]
use = egg:waitress#main
host = ::
port = 8080

# Begin logging configuration

[loggers]
#keys = root, icc, icc.cellula, waitress, sphinxapi
keys = root, icc.cellula, waitress, sphinxapi

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = NOTSET
#level = DEBUG
handlers = console

[logger_icc]
level = NOTSET
handlers = console
qualname = icc

[logger_icc.cellula]
level = DEBUG
handlers = console
qualname = icc.cellula

[logger_sphinxapi]
level = WARNING
handlers = console
qualname = sphinxapi

[handler_console]
class = StreamHandler
#args = (sys.stderr,)
args = (sys.stdout,)
#level = NOTSET
level = DEBUG
formatter = generic

[logger_waitress]
level = INFO
handlers = console
qualname = waitress

[formatter_generic]
#format = %(asctime)s[%(levelname)-5.5s] %(name)s:%(threadName)s: %(message)s
format = %(asctime)s_%(levelname)s_%(name)s:%(threadName)s: %(message)s

# End logging configuration

[maintainance]
# Maintain consistency of databases
keys=metadata

[maintainance_metadata]
#How many documents to process at a time
bunch=4
